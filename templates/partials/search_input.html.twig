<div class="col">
  <form action="{{ path('app_search') }}" method="GET" class="input-group m-auto" onsubmit="return validateSearch()">
    <span class="input-group-text">ğŸ”</span>
    <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-addon2" name="prompt" value="{{ prompt }}" required>
    <button class="btn btn-outline-info" type="submit" id="button-addon2">Search</button>
  </form>
</div>

<script>
  function validateSearch() {
    const searchInput = document.querySelector('input[name="prompt"]').value.trim();
    if (searchInput === "") {
        alert("Please enter a valid search query.");
			location.reload();
        return false;
    }
    return true;
  }
</script>