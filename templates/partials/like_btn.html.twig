{% if item.likes and app.user %}
	{% set doILiked = item.likes.users|filter(u => u.email == app.user.email)|first %}
	{% if doILiked %}
		<a href="{{ path('app_like', {id: item.id}) }}" class="btn btn-lg btn-primary">👍 Like</a>
	{% else %}
		<a href="{{ path('app_like', {id: item.id}) }}" class="btn btn-lg btn-outline-primary">👍 Like</a>
	{% endif %}
{% else %}
	<a href="{{ path('app_like', {id: item.id}) }}" class="btn btn-lg btn-outline-primary">👍 Like</a>
{% endif %}
